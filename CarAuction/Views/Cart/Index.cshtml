@model List<Vehicle>

<style>
    .noitem-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .card-header {
        background-color: #343a40;
        color: #fff;
        border-radius: 5px 5px 0 0;
    }

    .card {
        border-radius: 5px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .btn-outline-info {
        color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-outline-info:hover {
            color: #fff;
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

    .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
    }

        .btn-outline-danger:hover {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }

    .btn-success {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            color: #fff;
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>

@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col -8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i>
                                Shopping Cart
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-1g-7">
                                        Product Details
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Price
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>

                            <hr />
                            @foreach (var item in Model)
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@Url.Content("../../"+@item.Path)" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@item.Name</h5>
                                        <div style="font-size:11px;">@item.Mileage</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-1g-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> @item.Price</span>
                                    </div>
                                    <div class="col-2 col-1g-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                            <br />
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6 col-md-3 offset-md-9">
                                    <button type="submit" class="btn btn-success form-control ">
                                        <span>Continue</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="noitem-container">
        <img src="@Url.Content("../../Files/WC/nocart.png")" width="250px" />
        <h4>Please add items to cart...</h4>
    </div>
}
