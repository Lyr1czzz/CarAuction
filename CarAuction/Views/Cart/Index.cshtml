@model List<Vehicle>
@if (Model.Count() > 0)
{
    <form method="post">
        <div class="mb-2">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">← Вернуться к списку</a>
        </div>
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <i class="fa fa-shopping-cart"></i> Корзина
                </div>
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="d-flex align-items-start mb-3">
                            <div class="me-3">
                                <img src="@Url.Content(@item.Images.FirstOrDefault()?.ImagePath ?? "путь_к_изображению_заполнителю")" class="img-fluid rounded" style="max-width: 150px;" />
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-bold">@item.Year @item.Make.Name @item.Model.Name @item.Series.Name</div>
                                <div>@((item.Price).ToString("c"))</div>
                                <div>Пробег: @item.Odometer</div>
                            </div>
                            <div>
                                <button type="submit" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    Удалить
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer text-end">
                    <button type="submit" class="btn btn-success">
                        Продолжить
                    </button>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="d-flex flex-column align-items-center justify-content-center vh-100">
        <img src="@Url.Content("../../Files/WC/nocart.png")" width="250px" class="img-fluid" />
        <h4 class="mt-4">Тут пока ничего нема...</h4>
    </div>
}