@model CarAuction.Models.Auction

@{
    ViewData["Title"] = "Delete Auction";
}

<h2 class="text-info">@ViewData["Title"]</h2>

<form asp-action="Delete" id="auctionForm" method="post">
    <input type="hidden" asp-for="Id" />

    <!-- Auction Date Field -->
    <div class="form-group">
        <label asp-for="AuctionDate"></label>
        <input asp-for="AuctionDate" class="form-control" />
        <span asp-validation-for="AuctionDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>

    <a asp-action="Index" class="btn btn-primary">Back</a>
</form>