@model CarAuction.Models.ViewModels.AuctionVM

@{
    ViewData["Title"] = "Аукцион автомобилей";
    var currentLot = Model.CurrentLot;
}

<h2>@ViewData["Title"]</h2>

<!-- Место для отображения текущего лота -->
<div class="card" style="width: 18rem; min-width: 300px; margin-right: 15px;">
    <img class="card-img-top" src="@Url.Content("~/"+currentLot.Vehicle.Images.FirstOrDefault()?.ImagePath ?? "путь_к_изображению_заполнителю")" alt="@currentLot.Vehicle.Make.Name">
    <div class="card-body">
        <h5 class="card-title">@currentLot.Vehicle.Year @currentLot.Vehicle.Make.Name @currentLot.Vehicle.Model.Name @currentLot.Vehicle.Series.Name</h5>
        <p class="card-text">Начальная цена: $@currentLot.Vehicle.Price</p>
        <button type="button" class="btn btn-primary" onclick="placeBid(@currentLot.Id)">
            Повысить ставку на $50
        </button>
    </div>
</div>

<div class="container-fluid">
    <div class="d-flex flex-row flex-nowrap overflow-auto">
        @foreach (var lot in Model.Auction.Lots)
        {
            // Пропустите текущий лот, поскольку он уже отображается отдельно
            if (lot != currentLot)
            {
                <div class="card" style="width: 18rem; min-width: 300px; margin-right: 15px;">
                    <img class="card-img-top" src="@Url.Content("~/"+lot.Vehicle.Images.FirstOrDefault()?.ImagePath ?? "путь_к_изображению_заполнителю")" alt="@lot.Vehicle.Make.Name">
                    <div class="card-body">
                        <h5 class="card-title">@lot.Vehicle.Year @lot.Vehicle.Make.Name @lot.Vehicle.Model.Name @lot.Vehicle.Series.Name</h5>
                        <p class="card-text">Начальная цена: $@lot.Vehicle.Price</p>
                        <button type="button" class="btn btn-primary" onclick="placeBid(@lot.Id)">
                            Повысить ставку на $50
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>

