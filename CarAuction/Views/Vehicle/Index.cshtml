@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "List of Vehicle";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImageURL" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <ul class="list-unstyled">
                            <li><b>Make:</b></li>
                            <li><b>Model:</b></li>
                            <li><b>Price:</b> @item.Price</li>
                            <li><b>Vehicle_Condition_Type:</b> @item.Vehicle_Condition_Type</li>
                            <li><b>Vehicle_Type:</b> @item.Vehicle_Type</li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Show Details</a>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>