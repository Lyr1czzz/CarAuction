@model IEnumerable<CarAuction.Models.Vehicle>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Vehicle List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Create New Vehicle
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Vehicle Image
                    </th>
                    <th>
                        Vehicle Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Mileage
                    </th>
                    <th>
                        Make
                    </th>
                    <th>
                        Model
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">
                            @if (item.Images?.Any() == true)
                            {
                                <div uk-slideshow="animation: push; autoplay: true; autoplay-interval: 5000">

                                    <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">

                                        <ul class="uk-slideshow-items">
                                            @foreach (var image in item.Images)
                                            {
                                                <li>
                                                    <img src="@Url.Content(image.ImagePath)" alt="" uk-cover>
                                                </li>
                                            }
                                        </ul>

                                        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
                                        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>

                                    </div>

                                    <ul class="uk-slideshow-nav uk-dotnav uk-flex-center uk-margin"></ul>

                                </div>
                            }
                            else
                            {
                                <img src="@Url.Content("~/images/default-image.png")" width="100%" style="border-radius:5px; border:1px solid #bbb">
                            }
                        </td>
                        <td width="10%">@item.Name</td>
                        <td width="10%">@item.Price</td>
                        <td width="10%">@item.Mileage</td>
                        <td width="10%">@item.Make.Name</td>
                        <td width="10%">@item.Model.Name</td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Vehicle.</p>
    }

</div>