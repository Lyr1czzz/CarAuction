@model CarAuction.Models.Vehicle

<form method="post" >
    
    <input asp-for="Id" hidden />
    
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p1-3">Delete Vehicle</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Mileage"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Mileage" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MakeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Make.Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ModelId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Model.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                                <button type="submit" class="btn btn-danger w-100" >Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100">
                                <i class="fa-solid fa-right-from-bracket"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 pt-4">
                @if(Model.Id != 0)
                {
                    @if (Model.Images?.Any() == true)
                    {
                        <div uk-slideshow="animation: push; autoplay: true; autoplay-interval: 5000">

                            <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">

                                <ul class="uk-slideshow-items">
                                    @foreach (var image in Model.Images)
                                    {
                                        <li>
                                            <img src="@Url.Content(image.ImagePath)" alt="" uk-cover>
                                        </li>
                                    }
                                </ul>

                                <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
                                <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>

                            </div>

                            <ul class="uk-slideshow-nav uk-dotnav uk-flex-center uk-margin"></ul>

                        </div>
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/default-image.png")" width="100%" style="border-radius:5px; border:1px solid #bbb">
                    }
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height:250
            });
        });
    </script>
}