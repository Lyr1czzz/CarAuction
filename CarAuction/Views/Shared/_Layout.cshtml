@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using CarAuction.Utility

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarAuction</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarAuction.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/Files/WC/logo.png")" width="250px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    
                    <ul class="navbar-nav ml-auto">
                        <a class="nav-link" asp-area="" asp-controller="Auction" asp-action="AuctionList">Аукционы</a>

                        @if (User.IsInRole(WC.AdminRole))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Упровление
                                </a>
                                <ul class="dropdown-menu">
                                    <a class="nav-link" asp-area="" asp-controller="Vehicle" asp-action="Index">Транспортные средства</a>
                                    <a class="nav-link" asp-area="" asp-controller="Make" asp-action="Index">Производители</a>
                                    <a class="nav-link" asp-area="" asp-controller="Model" asp-action="Index">Модели</a>
                                    <a class="nav-link" asp-area="" asp-controller="Series" asp-action="Index">Серии</a>
                                    <a class="nav-link" asp-area="" asp-controller="Engine" asp-action="Index">Двигатели</a>
                                    <li><hr class="dropdown-divider"></li>
                                    <a class="nav-link" asp-area="" asp-controller="Auction" asp-action="Index">Аукционы</a>
                                    <li><hr class="dropdown-divider"></li>
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Создать админа</a>
                                </ul>
                            </li>
                        }
                        <li>
                            @if (HttpContextAccessor.HttpContext.Session.Get<List<ShoppingCart>>(WC.SessionCart) != null)
                            {
                                <a asp-action="Index" asp-controller="Cart" class="nav-link">
                                    @{
                                        var count = HttpContextAccessor.HttpContext.Session.Get<List<ShoppingCart>>(WC.SessionCart).Count;
                                    }
                                    <i class="fas fa-shopping-cart">Корзина</i> &nbsp; (@count)
                                </a>
                            }
                            else
                            {
                                <a href="#" class="nav-link">
                                    <i class="fas fa-shopping-cart">Корзина</i> &nbsp; (0)
                                </a> 
                            }
                        </li>


                        <partial name="_LoginPartial" />

                        <button class="btn" id="themeToggle">Сменить тему</button>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CarAuction - <a asp-area="" asp-controller="Vehicle" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const themeToggleButton = document.getElementById('themeToggle');
            updateButtonText(themeToggleButton);

            themeToggleButton.addEventListener('click', function () {
                const html = document.documentElement;
                const currentTheme = html.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                html.setAttribute('data-bs-theme', newTheme);
                updateButtonText(this);
            });
        });

        function updateButtonText(button) {
            const currentTheme = document.documentElement.getAttribute('data-bs-theme');
            button.textContent = currentTheme === 'dark' ? 'Сменить на светлую тему' : 'Сменить на темную тему';
        }
    </script>
</body>
</html>